{
  "name": "@dxos/network-manager",
  "version": "1.0.0-beta.93",
  "description": "Network Manager",
  "license": "GPL-3.0",
  "main": "dist/es/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && babel ./src --out-dir ./dist/es --ignore \"**/*.test.js\" --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "lint": "semistandard",
    "prepublishOnly": "npm run build && npm run test",
    "test": "jest --rootDir ./src --verbose --passWithNoTests"
  },
  "browserslist": [
    "> 5%"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@dxos/crypto": "^1.0.0-beta.1",
    "@dxos/metrics": "^1.0.0-beta.6",
    "@dxos/protocol": "^1.1.0-alpha.4",
    "@geut/discovery-swarm-webrtc": "^3.0.0-beta.3",
    "@wirelineio/discovery-swarm-memory": "^0.2.17",
    "assert": "^2.0.0",
    "debug": "^4.1.1",
    "wrtc": "^0.4.3"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/preset-env": "^7.4.5",
    "@dxos/feed-store": "1.2.0-beta.21",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-inline-import": "^3.0.0",
    "jest": "^25.1.0",
    "ngraph.path": "^1.2.0",
    "random-access-memory": "^3.1.1",
    "semistandard": "^14.2.0"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "node",
      "browser"
    ],
    "ignore": [
      "dist"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
